<%- include('./layout/header.ejs', {doc_title:"Talent"}) %>
<%- include('./layout/nav.ejs') %>
<div class='container w-25'>
    <h1 class='mt-5'>Register</h1>
    <% if(err){ %>
        <p class='mt-3 text-center' style='color:red; font-size:12px;'><%= err %></p>
    <% } %>
    <hr class="col-xs-12">
    <form action="/register" method="POST">
        <label for="" >Username</label>
        <input type="text" name='username' placeholder="e.g:mynameis17" class='form-control'>
        <label for="" class='mt-3'>Password</label>
        <input type="password" name='password' placeholder="e.g:Password10" class='form-control'>
        <label for="" class='mt-3'>Email</label>
        <input type="email" name='email' placeholder="e.g:lorain@gmail.com" class='form-control'>
        <hr class="col-xs-12">
        <label for="" >Name</label>
        <input type="text" name='name' placeholder="Name" class='form-control'>
        <label for="" class='mt-3'>Age</label>
        <input type="number" name='age'placeholder="Age" class='form-control'>
        <label for="" class='mt-3'>Gender</label>
        <select name="gender" class='form-control'>
            <option value="Female">Female</option>
            <option value="Male">Male</option>
        </select>
        <label for="" class='mt-3'>Talent</label>
        <select name="talent" class='form-control'>
            <option selected disabled>--Select---</option>
            <option value="Singer">Singer</option>
            <option value="Dancer">Dancer</option>
        </select>
        <input type="submit" class='mt-3 btn btn-primary' value="Add">
        <a href="/talents" class=" mt-3 text-white text-decoration-none btn btn-danger">Cancel</a>
    </form>
</div>
<%- include('./layout/footer.ejs') %>