<%- include('./layout/header.ejs', {doc_title:"Talent"}) %>
<%- include('./layout/nav.ejs') %>
<div class='container w-50'>
    <h1 class='mt-5'>Edit <%= data.name %></h1>
    <form action="/shows/edit/<%= data.id %>" method ="POST">
        <label for="" class='mt-3'>Name</label>
        <input type="text" class='form-control' name ='name' value='<%= data.name %>'>
        <label for="" class='mt-3'>Date</label>
        <input type="datetime" class='form-control' name='schedule' value='<%= data.getSchedule() %>'>
        <label for="" class='mt-3'>Requirement</label>
        <select name="requirement" id="" class='form-control'>
            <option value="Dancer" <% data.requirement === "Dancer" ? 'selected' :''%>>Dancer</option>
            <option value="Musician" <% data.requirement === "Musician" ? 'selected' :''%>>Musician</option>
            <option value="Comedian" <% data.requirement === "Comedian" ? 'selected' :''%>>Comedian</option>
            <option value="Singer" <% data.requirement === "Singer" ? 'selected' :''%>>Singer</option>
        </select>
        <input type="submit" value='Edit' class='btn btn-warning mt-3 '>
        <a href="/shows" class='btn btn-danger text-white text-decoration-none mt-3'>Cancel</a>
    </form>
</div>
<%- include('./layout/footer.ejs') %>   