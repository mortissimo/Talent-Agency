<%- include('./layout/header.ejs', {doc_title:"Talent"}) %>
<%- include('./layout/nav.ejs') %>
<div class='container w-50'>
    <h1 class='mt-5'>Add Show</h1>
    <form action="/shows/add" method ="POST">
        <label for="" class='mt-3'>Name</label>
        <input type="text" class='form-control' name ='name'>
        <label for="" class='mt-3'>Date</label>
        <input type="datetime-local" class='form-control' name='schedule'>
        <label for="" class='mt-3'>Requirement</label>
        <select name="requirement" id="" class='form-control'>
            <option value="Dancer">Dancer</option>
            <option value="Musician">Musician</option>
            <option value="Comedian">Comedian</option>
            <option value="Singer">Singer</option>
        </select>
        <input type="submit" value='Add' class='btn btn-primary mt-3 '>
        <a href="/shows" class='btn btn-danger text-white text-decoration-none mt-3'>Cancel</a>
    </form>
</div>
